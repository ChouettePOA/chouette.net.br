<page-section class="s-invert wide" @title="Space & Sizes">
	<hug class="wrap u-vspacer">
		<hug
			class="tight"
			webc:for="space of ['2xs', 'xs', 'xs-s', 's', 's-m', 's-l', 'm', 'l', 'l-xl', 'xl']"
		>
			<pre @text="'var(--space-' + space + ')'"></pre>
			<span>â†’</span>
			<measure :style="'width: var(--space-' + space + ')'"></measure>
		</hug>
	</hug>
	<hug class="wrap u-vspacer">
		<hug
			class="tight"
			webc:for="size of ['-2', '-1', '0', '1', '2', '3', '4', '5']"
			:style="'font-size: var(--size-' + size + ')'"
		>
			<pre @text="'var(--size-' + size + ')'"></pre>
			<p style="font-style: italic" @text="'Italic'"></p>
			<p @text="'Handgloves'"></p>
			<p style="font-weight: bold" @text="'Bold'"></p>
		</hug>
	</hug>
</page-section>

<page-section class="u-vspacer">
	<deco-vine-wrap>
